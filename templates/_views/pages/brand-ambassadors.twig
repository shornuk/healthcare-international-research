{% extends "_layouts/base" %}

{% set meta = {
	eyebrow: 'Our brands',
	title: entry.title,
	text: 'HIR is thrilled to have Brand Ambassadors for MotherSage and Hempe endorsing and supporting our top-tier topical CBD products.'
} %}

{% block content %}
	<div class="mx-auto max-w-7xl px-6 lg:px-8">
		
		<ul role="list" class="mx-auto mt-20 grid grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:gap-x-8 xl:max-w-none">
	     
			{% for ambassador in ambassadors %}
			    <li class="flex flex-col gap-6 lg:flex-row">
			        <img class="aspect-[4/5] w-52 flex-none rounded-2xl object-cover" src="{{ ambassador.href }}" alt="">
			        <div class="flex-auto">
			         	<h3 class="text-lg font-semibold leading-8 tracking-tight text-slate-900 dark:text-white">{{ ambassador.name }}</h3>
			         	<p class="text-base leading-7 text-slate-600 dark:text-white/80">{{ ambassador.credentials }}</p>
			         	<p class="mt-6 text-base leading-7 text-slate-600 dark:text-white/80">&ldquo;{{ ambassador.text }}&rdquo;</p>
			        </div>
			    </li>
		    {% endfor %}
	    </ul>
	  </div>

{% endblock %}