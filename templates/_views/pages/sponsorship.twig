{% extends "_layouts/base" %}

{% set meta = {
	eyebrow: 'Our brands',
	title: entry.title,
	text: entry.overview
} %}

{% set sponsorships = entry.sponsorships.all() %}

{% block content %}
 	<div class="mx-auto max-w-7xl px-6 lg:px-8">
    	<div class="max-w-2xl lg:max-w-4xl">
      		<div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
      			{% for sponsorship in sponsorships %}

      				{% set photo = sponsorship.photo.one()|default(defaults.photo.one()) %}
      				{% set logo = sponsorship.logo.one() %}


					<article class="relative isolate flex flex-col gap-8 lg:flex-row">
			  			<div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
			    			<img src="{{ photo.url }}" alt="{{ sponsorship.title }}" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover">
			  			</div>
			  			<div>
			    			<div class="relative max-w-xl">
			      				<h3 class="mt-3 text-xl font-semibold leading-6 text-slate-900 dark:text-white">
			          				{{ sponsorship.title }}
			      				</h3>
			      				<p class="mt-5 leading-6 text-slate-600 dark:text-white/80">{{ sponsorship.overview }}</p>
			    			</div>
			    			<div class="mt-6 flex">
			    				{% if logo %}
				      				<div class="relative flex items-start gap-x-4">
				        				<img src="{{ logo.url }}" alt="{{ sponsorship.title }} logo" class="h-16">
				      				</div>
			      				{% endif %}
			    			</div>
			  			</div>
					</article>
      			{% endfor %}
        		
      		</div>
    	</div>
 	</div>

{% endblock %}