{% extends "_layouts/base" %}

{% set meta = {
	eyebrow: 'Our brands',
	title: entry.title,
	text: entry.overview
} %}

{% set events = craft.entries()
    .section('events')
    .all()
%}

{% block content %}
 	<div class="mx-auto max-w-7xl px-6 lg:px-8">
    	<div class="flex max-w-2xl flex-col items-end justify-between gap-16 lg:mx-0 lg:max-w-none lg:flex-row">
      		
      		
      		<div class="w-full lg:max-w-xl lg:flex-auto">
        		{% if events %}
			        <ul>
			        	{% for event in events %}
			        		<li class="py-8">
			            		<dl class="relative flex flex-wrap gap-x-3">
			              			<dt class="sr-only">Event</dt>
			              			<dd class="w-full flex-none text-xl font-semibold text-slate-900 dark:text-white">
			                			{{ event.title }}
			              			</dd>
			              			<dt class="sr-only">Description</dt>
			              			<dd class="mt-2 w-full flex-none text-base leading-7 text-slate-600 dark:text-white/80">{{ event.overview }}
			              				{% if event.eventWebsite %}
											<p><a href="{{ event.eventWebsite }}">Find out more &rarr;</a></p>
				              			{% endif %}
			              			</dd>
			              			<dt class="sr-only">When</dt>
			              			<dd class="mt-4 text-base font-semibold leading-7 text-slate-900 dark:text-white">{{ event.startDate|date }}{% if event.endDate %} &rarr; {{ event.endDate|date }}{% endif %}</dd>
			              			<dt class="sr-only">Location</dt>
			             			<dd class="mt-4 flex items-center gap-x-3 text-base leading-7 text-slate-500 dark:text-white/80">
						                <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 flex-none fill-gray-300" aria-hidden="true">
						                  <circle cx="1" cy="1" r="1" />
						                </svg>
				                		{{ event.location }}
			              			</dd>
			            		</dl>
			          		</li>
			        	{% endfor %}
			        </ul>
		        {% else %}
		        	<p>No upcoming events</p>
		        {% endif %}
        		{# <div class="mt-8 flex border-t border-gray-100 pt-8">
          			<a href="#" class="text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500">View all openings <span aria-hidden="true">&rarr;</span></a>
       			</div> #}
      		</div>
    	</div>
  	</div>

{% endblock %}