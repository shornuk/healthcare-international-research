{% if title|length %}
	<div class="py-16 sm:py-24">
	 	<div class="mx-auto max-w-7xl px-6 lg:px-8">
	    	<div class="mx-auto max-w-2xl lg:mx-0">
	    		{% if eyebrow ?? false %}
	      			<p class="text-base font-semibold leading-7 text-[#40B8BA]">{{ eyebrow }}</p>
	      		{% endif %}
	      		<h2 class="mt-2 text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-6xl">{{ title }}</h2>
	      		{% if text ?? false %}
	      			<p class="mt-6 text-lg leading-8 text-slate-600 dark:text-white/80">{{ text }}</p>
	      		{% endif %}
	    	</div>
	  	</div>
	</div>
{% endif %}
