{% macro linklist(params) %}
    {% set links = params.links ?? false %}
    <h3 class="text-sm font-semibold leading-6 text-slate-950 dark:text-white">{{ params.heading }}</h3>
    <ul role="list" class="mt-6 space-y-4">
    {% if links %}
        {% for link in links %}
            <li>
                <a href="{{ link.href ?? '' }}" class="text-sm leading-6 text-slate-800 dark:text-slate-300 hover:text-slate-950 dark:hover:text-white">{{ link.title ?? '' }}</a>
            </li>
        {% endfor %}
    {% endif %}
    </ul>
{% endmacro %}

<footer class="mt-12 dark:bg-slate-950" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Footer</h2>
    <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
        <div class="xl:grid xl:grid-cols-3 xl:gap-8">
            <div class="space-y-8">
                <div class="w-40">
                    {% include "_includes/logo.twig" %}
                </div>
                <p class="text-sm leading-6 text-slate-800 dark:text-slate-300">Elevating Beauty and Wellness with Premium CBD Solutions.</p>
                <div class="flex space-x-6"></div>
            </div>
    
            <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
                
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        {{ _self.linklist({
                            heading: "Our company",
                            links: companyPages
                        }) }}
                    </div>
                    <div class="mt-10 md:mt-0">
                        {{ _self.linklist({
                            heading: "Our brands",
                            links: brandPages
                        }) }}
                    </div>
                </div>
                
                <div class="md:grid md:grid-cols-2 md:gap-8">
                    <div>
                        {{ _self.linklist({
                            heading: "Information",
                            links: informationPages
                        }) }}
                    </div>
                    <div class="mt-10 md:mt-0">
                        {{ _self.linklist({
                            heading: "Legal",
                            links: legalPages
                        }) }}
                    </div>
                </div>
              
            </div>
        </div>
        
        <div class="mt-16 border-t border-slate-500/10 dark:border-white/10 pt-8 sm:mt-20 lg:mt-24">
            <p class="text-xs leading-5 text-slate-700 dark:text-gray-400">&copy; {{ now|date('Y')}} {{ siteName }}. All rights reserved.</p>
        </div>
        
    </div>
</footer>
