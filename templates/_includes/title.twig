{% if title|length %}
	<div class="pt-40 pb-12">
	 	<div class="mx-auto max-w-7xl px-6 lg:px-8">
	    	<div class="mx-auto lg:mx-0">
	    		{% if eyebrow ?? false %}
	      			<p class="text-base font-semibold leading-7 text-[#40B8BA]">{{ eyebrow }}</p>
	      		{% endif %}
	      		<h1 class="mt-2 text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">{{ title }}</h1>
	      		{% if text ?? false %}
	      			<p class="max-w-2xl text-xl mt-6 leading-8 text-slate-800 dark:text-white/80">{{ text }}</p>
	      		{% endif %}
	    	</div>
	    	{# <div class="border-t border-slate-200 w-full mt-8 pt-8"></div> #}
	  	</div>
	</div>
{% endif %}
